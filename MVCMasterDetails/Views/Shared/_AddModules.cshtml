@model List<MVCMasterDetails.Models.CourseModule>
    <table id="ExTable" class="table table-bordered" >
        <thead><tr>
       <th>Module Name</th> <th>Duration</th><th></th></tr></thead>
        <tbody>         
            @for(int i=0; i < Model.Count; i++){
                <tr><td>
                        <input type="text" class="form-control" name="CourseModules[@i].ModuleName" value="@Model[i].ModuleName" />
                    </td><td>
                        <input type="text" class="form-control" name="CourseModules[@i].Duration" value="@Model[i].Duration" />
                    </td><td>
                        @if (i > 0){
                            <button type="button" class="btn btn-danger" onclick="deleteRow(this)">Delete</button>}
                    </td></tr>}
        </tbody></table>
<input  type="hidden" id="HIndex" value="@Model.Count"/>